<!DOCTYPE html>
<html lang="es">
    <%- include("../partials/head") %>  
<body class="editProduct">
    <%- include("../partials/header") %> 
    <main class="addProduct__main">
        <section class="form__container">
            <h1>Editar</h1>
            <form >
                <div class="form__l--container">
                    <div>
                        <label for="name">Nombre del producto</label>
                        <input name="title" type="text" id="title" placeholder="Agregue un nombre" value="<%= product.title %> ">
                        </select>
                    </div>
                    <div>
                        <label for="category">Categoria</label>
                        <select name="category" type="text" id="category">
                            <option value="<%= product.category %>" hidden selected><%= product.category %> </option>
                            <option value="detetica">Dietética</option>
                            <option value="veggie">Veggie</option>
                            <option value="snacks">Snacks</option>
                            <option value="suplementos">Suplementos</option>
                            <option value="varios">Varios</option>
                        </select>
                    </div>
                    <div>
                        <label for="price">Precio</label>
                        <input name="price" type="text" id="price" placeholder="Agregue un precio" value="<%= product.price %>">
                    </div>
                </div>
                <div class="form__r--container">
                    <div>
                        <label for="image">Imagen</label>
                        <input name="image" type="file" id="image" placeholder="Agregue una imagen" value="<%= product.image %>">
                    </div>
                    <div>
                        <label for="discount">Descuento</label>
                        <input name="discount" type="number" id="discount" min="0" max="100" step="5" value="<%= product.discount %>">
                    </div>
                    <div>
                        <label for="description">Descripción</label>
                        <textarea name="descripción" type="text" id="description" placeholder="Agregue una descripción" cols="50"><%= product.description %></textarea>
                    </div>
                </div>
                <div class="actionButtons__container">
                    <a href="/users/adminProfile"><p class="cancelar__button">Cancelar</p></a>
                    <button class="enviar__button">Terminar</button>
                </div>
            </form>
        </section>
    </main>
    <%- include("../partials/footer") %> 
</body>
</html>