<Header>
    <div class="greenSlider__container">
        <div class="greenSlide-track">
            <p>Bienvenido al mundo saludable</p>
            <p>Envios gratis desde $6000</p>
            <p>Ofertas todos los días</p>
            <p>Productos en descuento</p>
            <p>Tu vida más saludable</p>
        </div>
        
    </div>
    <div class="navbar__container">
        <i class="fa-solid fa-magnifying-glass"></i>
        <div class="header__tittle__container">
            <a href="/">
                <div class="header__tittle">
                    <h1 class="white__word">Green</h1>
                    <h1 class="green__word">Food</h1>
                </div>
                <div class="header__subtittle">
                    <p>Lorem ipsum dolor sit amet</p>
                </div>
            </a>
        </div>
        <button type="button" class="header__burgerbutton">
            <i class="fa-solid fa-bars"></i>
            <ul class="header__menu">
                
                    <li>
                        <a href="/products/carrito"><i class="fa-solid fa-cart-shopping"></i></a>
                    </li>
                <% if (locals.userLogin) { %>
                    <li>
                        <a href="/users/profile/<%= locals.userLogin.Id %> "><i class="fa-solid fa-circle-user"></i></a>
                    </li>
                <% } %>
                    
                
                    <li>
                        <a href="/users/login">Login</a>
                    </li>
                
                    <li>
                        <a href="/users/register">Register</a>
                    </li>
            </ul>
        </button>
    </div>
    <div class="navbar__container--1024">
        <div class="navbar__busqueda">
            <form action="/products/search" method="get">
                <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                <input type="text" name="keywords" placeholder="¿Qué andas buscando?">
            </form>
            
        </div>
        <div class="header__tittle__container">
            <a href="/">
                <div class="header__tittle">
                    <h1 class="white__word">Green</h1>
                    <h1 class="green__word">Food</h1>
                </div>
                <div class="header__subtittle">
                    <p>Lorem ipsum dolor sit amet</p>
                </div>
            </a>
        </div>
        <div class="userNav__container">
            <ul class="navbar__loginregister">
                <li><a class="navbar__carrito" href="/products/carrito"><i class="fa-solid fa-cart-shopping"></i></a></li>
            <% if (!locals.userLogin) { %>
                <li><a href="/users/login">Login</a></li>
                <li><a href="/users/register">Register</a></li>
            <% } else { %>     
                <li><a class="navbar__profile" href="/users/profile/<%= locals.userLogin.id %> "><i class="fa-solid fa-circle-user"></i></a></li>
            <% } %>
            </ul>
        </div>
        
    </div>
    <div class="header__categories__container">
        <span class="header__categories inicioEdge"><a href="/" class="header__categories">Inicio</a></span>
        <span class="header__categories dieteticaEdge"><a href="/products/categories/dietetica" class="header__categories">Dietética</a></span>
        <span class="header__categories veggieEdge"><a href="/products/categories/veggie" class="header__categories">Veggie</a></span>
        <span class="header__categories snacksEdge"><a href="/products/categories/snacks" class="header__categories">Snacks</a></span>
        <span class="header__categories suplementosEdge"><a href="/products/categories/suplementos" class="header__categories">Suplementos</a></span>
        <span class="header__categories variosEdge"><a href="/products/categories/varios" class="header__categories">Varios</a></span>
        <span class="header__categories todosEdge"><a href="/products" class="header__categories">Todos</a></span>
    </div>
    <div class="header__adminNavbar__container">
        <ul>
            <li><a href="/">Inicio</a></li>
            <li><a href="/products/addProduct">Agregar</a></li>
            <li><a href="/products/selectEditProduct">Editar</a></li>
            <li><a href="/products/selectDelete">Eliminar</a></li>
            
        </ul>
    </div>
</Header>